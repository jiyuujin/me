{
  "parser": {
    ".[jt]sx?$": "@markuplint/jsx-parser"
  },
  "rules": {
    "attr-duplication": true,
    "character-reference": false,
    "deprecated-attr": true,
    "deprecated-element": true,
    "doctype": true,
    "id-duplication": true,
    "permitted-contents": true,
    "required-attr": true,
    "invalid-attr": {
      "option": {
        "ignoreAttrNamePrefix": [
          "key",
          "ref",
          "property",
          "content",
          "dangerouslySetInnerHTML"
        ]
      }
    },
    "landmark-roles": true,
    "required-h1": true,
    "wai-aria": true,
    "class-naming": "/.+/",
    "attr-equal-space-after": true,
    "attr-equal-space-before": true,
    "attr-spacing": true,
    "attr-value-quotes": true,
    "case-sensitive-attr-name": false,
    "case-sensitive-tag-name": true,
    "indentation": false
  },
  "excludeFiles": [
    "public/404.html",
    "public/index.html",
    "node_modules/**/*.html",
    "node_modules/**/*.tsx"
  ]
}
